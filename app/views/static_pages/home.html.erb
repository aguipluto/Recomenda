<% content_for :jumbotron do %>

    <section class="jumbotron jumbotron-background">
      <div class="container">
        <% @adviseContainer = true %>
        <div id="advise-container" class="advise-home">
          <% flash.each do |key, value| %>
              <div class="alert alert-<%= key %> alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= value.html_safe %>
              </div>
          <% end %>
        </div>

        <h1>rCOMENda</h1>

        <p class="margin-xxl">¿Dónde cenamos esta noche?</p>

        <p class="text-center" title="Proyectos">
          <button id="scrollDown" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-chevron-down"></span>
          </button>
        </p>
      </div>
    </section>

<% end %>